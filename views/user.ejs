<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ChatApp</title>
</head>
<script src="/socket.io/socket.io.js"></script>
<script>
  var socket = io();
  socket.on('online',(data)=>{onlin.innerHTML = data.text});
  
  socket.on('broadcast',(data)=>{
    const p = document.createElement("div");
    messages.appendChild(p);
    const span = document.createElement("div1")
    p.appendChild(span);
    const name = document.createElement("span");
    name.innerHTML+=data.user + '<br>';
    name.setAttribute("class","name");
    span.appendChild(name);
    span.innerHTML += data.text;
    span.style.background = 'aqua'
    span.style.paddingTop = '0px';
    messageBody.scrollTop = messageBody.scrollHeight + span.style.height;
  })
  socket.on('broadcastme',(data)=>{
    const p = document.createElement("div");
    messages.appendChild(p);
    const span = document.createElement("div1")
    p.appendChild(span);
    span.innerHTML = data.text
    p.style.textAlign = 'right';
    span.style.background = 'rgb(131, 211, 136)';
    messageBody.scrollTop = messageBody.scrollHeight + span.style.height;
  })
  function send(){
    socket.emit('message', {text : textinput.value,user:name.innerHTML});
    textinput.value = '';
  }
  addEventListener("keyup",(e)=>{
    if(e.keyCode == 13)
    send();
  })
</script>
<body style="min-width: 300px;">
  <h1 class="sideheading" style="font-size: 130px;">Say <br> Hello <br> To the <br> World !</h1>
  <div class="container">
    <div class="header" style="display: flex;justify-content: space-evenly;">
      <div>username : <span id="name"><%= user.username %></span></div>
      <span id="online" style="padding: 4px;"></span>
    </div>
    <div id="messageArea">
      <div id="messages">
        <% for(var i = 0; i<chats.length; i++){ %>
        <div>
          <div1 style="background: cyan; ">
            <span class="name"><%= chats[i].username%> &nbsp; </span>
            <%= chats[i].text%>
          </div1>
        </div>
        <script></script>
        <% } %>
      </div>
    </div><br>
    <div class="input">
      <input type="text" id="textinput" placeholder="type your message.."> 
      <button onclick="send()" style="border-radius: 20px;height: 30px;">Send</button>
    </div>
  </div>
</body>
<script>
  const messages = document.getElementById("messages")
  const textinput = document.getElementById("textinput");
  const onlin = document.getElementById("online");
  const name = document.getElementById("name");
  var messageBody = document.querySelector("#messageArea");
</script>
<style>
  *{
    margin: 0;
    box-sizing: border-box;
  }

  .container{
    position: absolute;
    top: 0;
    right: 0;
    padding: 0;
    width: 100%;
    border: 1px solid black;
    background: antiquewhite;
    padding-bottom: 5px;
    max-width: 400px;
    height: 100vh;
  }
  .header{
    width: 100%;
    background-color: #555;
    height: 40px;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  #messageArea{
    margin-top: 10px;
    width: 100%;
    height: calc(100vh - 130px);
    overflow: scroll;
    padding:5px;
   
  }
  #messages div{
    display: block;
    margin-block-start: 2px;
    margin-block-end: 2px;
    margin-inline-start: 0px;
    margin-inline-end: 0px;
  }
  #messages div1{
    display: inline-block;
    text-align: left;
    padding: 5px;
    border-radius: 10px;
    border-top-right-radius: 0;
    max-width: 70%;
  }
  .name{
    font-size: 10px;
    font-family: Arial, Helvetica, sans-serif;
    color: orange;
  }
  #name{
    width: 50%;
    height: 30px;
    border-radius: 5px;
  }
  .input{
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  #textinput{
    height: 30px;
    width: 70%;
    min-width: 200px;
    border-radius: 20px;
    padding: 0 1rem;
    margin-left: 5px;
  }
  @media only screen and (max-width : 800px) {
    .sideheading{
      display: none;
    }
  }
</style>
<style>
  /* width */
  ::-webkit-scrollbar {
    width: 7px;
    height: 0px;
  }
  
  /* Track */
  ::-webkit-scrollbar-track {
    background: #f1f1f1; 
  }
   
  /* Handle */
  ::-webkit-scrollbar-thumb {
    background: #888; 
    border-radius: 5px;
  }
  
  /* Handle on hover */
  ::-webkit-scrollbar-thumb:hover {
    background: #555; 
  }
  </style>
</html>